@{
    TempData["Title"] = "Yazarlar";
}
@model IEnumerable<AdminBlog.Models.Author>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Yazar Listesi</h4>
                <a href="/Home/AuthorCreate" onclick="clearForm()" class="btn btn-primary rounded float-right">Yeni Ekle</a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="example3" class="display min-w850">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Ad Soyad</th>
                                <th>E-Posta</th>
                                <th>Şifre</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.Name @item.Surname</td>
                                    <td>@item.Email</td>
                                    <td>@item.Password</td>
                                    <td>
                                        <div class="d-flex justify-content-end">
                                            <a asp-route-id="@item.Id" asp-action="AuthorCreate" class="btn btn-primary shadow btn-xs sharp me-1"><i class="fas fa-pencil-alt"></i></a>
                                            <a asp-route-id="@item.Id" asp-action="AuthorDelete" class="btn btn-danger shadow btn-xs sharp"><i class="fas fa-trash-alt"></i></a>
                                        </div>												
                                    </td>												
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>